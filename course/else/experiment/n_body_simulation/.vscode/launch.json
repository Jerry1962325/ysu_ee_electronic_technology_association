{  
    "version": "0.2.0",  
    "configurations": [  
        {  
            "name": "Debug n_body_simulation",  
            "type": "cppdbg",  
            "request": "launch",  
            "program": "${workspaceFolder}/n_body_simulation",  
            "args": [],  
            "stopAtEntry": false,  
            "cwd": "${workspaceFolder}",  
            "environment": [],  
            "externalConsole": false,  
            "MIMode": "gdb",  
            "miDebuggerPath": "gdb", // 这里的gdb路径可能需要根据你的系统进行调整  
            "setupCommands": [  
                {  
                    "description": "Enable pretty-printing for gdb",  
                    "text": "-enable-pretty-printing",  
                    "ignoreFailures": true  
                }  
            ],  
            "preLaunchTask": "build" // 这个值需要与tasks.json中的label相对应  
        }  
    ]  
}